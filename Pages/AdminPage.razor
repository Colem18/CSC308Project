@page "/adminpage"
@inject NavigationManager NavManager

<div class="flex-container">
    <h1>Welcome!</h1>
    <h3>Select what actions you would like to perform?</h3>
    <div class="flex-container row">
        <button class="btn roma" @onclick="OnCreateEvent">
            Create a New Event
        </button>
        <button class="btn roma" @onclick="OnModifyEvent">
            Modify an Existing Event
        </button>
        <button class="btn roma" @onclick="OnDeleteEvent">
            Delete an Existing Event
        </button>

    </div>
</div>

