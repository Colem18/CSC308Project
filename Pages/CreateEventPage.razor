@page "/createEventPage"
@inject NavigationManager NavManager

<div class="col-xl-6 p-3">
    <RadzenText TextStyle="TextStyle.H5" TagName="TagName.H2" Class="mb-4">
        Create Event
    </RadzenText>
    <p>
        <RadzenLabel Component="EventName" Text="Name" />
        <RadzenTextBox Name="EventName" @bind-Value=name />
    </p>
    <p>
        <RadzenLabel Component="EventDate" Text="Date" />
        <RadzenTextBox Name="EventDate" @bind-Value=date />
    </p>
    <p>
        <RadzenLabel Component="EventAddress" Text="Address" />
        <RadzenTextBox Name="EventAddress" @bind-Value=address />
    </p>
    <p>
        <RadzenLabel Component="EventDescription" Text="Description" />
        <RadzenTextBox Name="EventDescription" @bind-Value=description />
    </p>
    <p>
        <RadzenLabel Component="EventImage" Text="ImageURL" />
        <RadzenTextBox Name="EventImage" @bind-Value=imageURL />
    </p>
    <p>
        <RadzenLabel Component="EventType" Text="Type" />
        <RadzenTextBox Name="EventType" @bind-Value=type />
    </p>
    <p>
        <RadzenLabel Component="EventTotalTickets" Text="Ticket Number" />
        <RadzenTextBox Name="EventTotalTickets" @bind-Value=ticketCount />
    </p>
    <RadzenButton Click=@(args => OnSubmit()) Text="Create" ButtonStyle="ButtonStyle.Primary"/>
</div>

@code {
    string name = "";
    string date = "";
    string address = "";
    string description = "";
    string imageURL = "";
    string type = "";
    string ticketCount = "0";

    void OnSubmit()
    {
        Console.WriteLine($"Event created!");
    }
}
